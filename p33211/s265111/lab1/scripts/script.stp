global read, write, open, close

probe begin {
   printf ("Probe begin\n")
}

probe syscall.write {
   if (pid() == target())
   	write += 1
}

probe syscall.read {
   if (pid() == target())
   	read += 1
}

probe syscall.openat {
   if (pid() == target())
   	open += 1
}

probe syscall.close {
   if (pid() == target())
   	close += 1
}

probe timer.ms(100) {
   printf("%d\t%d\t%d\t%d\t\n", read, write, open, close)
   read = 0
   write = 0
   open = 0
   close = 0
}
